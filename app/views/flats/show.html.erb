    <div class="pT">
    <button type="button" class="btn-bw btn-outline-dark">Show all amenities</button>
    </div>

  </div>
  <%# Amenities end %>
  <%# Booking start %>
  <div class="form w250 pB">
    <% unless current_user == @flat.user %>
      <p class="f20 pB">Your Hometastic Stay</p>
      <%= simple_form_for [ @flat, @booking ] do |f| %>
        <%= f.input :month_request, as: :string, required: true, placeholder:'select date', wrapper_html: {class:"form-month"}, input_html: {class: "datepicker"} %>
        <br>
        <%= f.submit "Send a request to this Flat", class: "btn-lb rounded-pill border-0 w-100 py-3" %>
      <% end %>
      <%= link_to "Chat with the owner", flat_chat_rooms_path(@flat), method: :post, class: "btn-db rounded-pill border-0 w-100 mt-3 py-3" %>

    <% else %>
      <button type="button" class="btn-lb rounded-pill border-0 w-100 mt-3 f14White"><%= link_to "Edit your flat", edit_flat_path(@flat)%></button>
      <button type="button" class="btn-db rounded-pill border-0 w-100 mt-3 py-3 f14White"><%= link_to 'Add amenities', new_flat_amenity_path(@flat) %></button>
    <% end  %>
    <%#----------------- %>
  </div>
  <%# Booking end %>
</div>

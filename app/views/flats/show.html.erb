<%# main start %>
<div class="container">
  <div class="">
    <div class="">
      <p class="f26">Flat name will be taking this hometastic place</p>
      <div class="titleFlex">
        <div class="flex justify-content-between">
          <p class="f14"><%= image_tag "star.png"%> &nbsp; 4.98 - 12 reviews &nbsp;üìç<%= @flat.city %>, <%= @flat.address %> &nbsp; üí∂<%= @flat.price %>‚Ç¨/month </p>
        </div>
        <% if current_user == @flat.user %>
        <div style="padding-bottom:10px;">
        <%= link_to edit_flat_path(@flat) do %>
          <span class="iconify" data-icon="clarity:note-edit-line" style="color: #a1a1aa; margin-right:10px;" data-width="32"></span>
        <% end %>
        <%= link_to new_flat_amenity_path(@flat) do %>
          <span class="iconify" data-icon="carbon:add-alt" style="color: #a1a1aa;" data-width="32"></span>
        <% end %>
        </div>
        <% end %>
      </div>
  </div>
</div>
  <%# Images wrapper start %>
    <div class="imgContainer">
      <%# Main pic start %>
      <div>
        <img class="mainImage" src="https://images.unsplash.com/photo-1612832164313-ac0d7e07b5ce?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="hero">
      </div>
      <%# Main pic end %>
      <%# Secondary pics start %>
      <div class="grid">
        <img class="secondaryImage" src="https://images.unsplash.com/photo-1493663284031-b7e3aefcae8e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="living room">
        <img class="secondaryImage" src="https://images.unsplash.com/photo-1552321554-5fefe8c9ef14?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8N3x8YmF0aHJvb218ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" alt="bathroom">
        <img class="secondaryImage" src="https://images.unsplash.com/photo-1624409990662-03f19cc0e0cc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8dGVycmFjZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" alt="terrace">
        <img class="secondaryImage" src="https://images.unsplash.com/photo-1600607686527-6fb886090705?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OXx8a2l0Y2hlbnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" alt="kitchen">
      </div>
      <%# Secondary pics end %>
    </div>
  <%# Images wrapper end %>
  <%# Wrapper amenities description form starts %>
  <div class="grid2">
  <%# Amenities start %>
    <div class="pT wAmenities mr-5">
    <p class="f24">What the place offers</p>
    <div class="amenitiesGrid pT2">
    <p class="f16"><span class="iconify" data-icon="ant-design:wifi-outlined" style="color: #2c364c; font-size: 28px;"></span> Wifi</p>
    <p class="f16"><span class="iconify" data-icon="ic:baseline-outdoor-grill" style="color: #2c364c; font-size: 28px;"></span> Barbecue</p>
    <p class="f16"><span class="iconify" data-icon="mdi:flower-tulip" style="color: #2c364c; font-size: 28px;"></span> Shared furnished terrace</p>
    <p class="f16"><span class="iconify" data-icon="jam:hairdryer" style="color: #2c364c; font-size: 28px;"></span>Hairdrier</p>
    <p class="f16"><span class="iconify" data-icon="mdi:desk" style="color: #2c364c; font-size: 28px;"></span> Work desk</p>
    </div>
    <%# Description start %>
  <div class="mDescr">
    <p class="f16"><%= @flat.description %></p>
  </div>
  <%# Description end %>
    </div>
  <%# Amenities end %>
 <%# Booking start %>
    <div class="formFlex mt-5">
      <div class="form m0 w250 pB flex justify-content-end">
        <%  unless current_user == @flat.user %>
          <p class="f20 pB">Your Hometastic Stay</p>
          <%= simple_form_for [ @flat, @booking ] do |f| %>
            <%= f.input :month_request, as: :string, required: true, placeholder:'select date', wrapper_html: {class:"form-month"}, input_html: {class: "datepicker"} %>
            <br>
            <%= f.submit "Send a request to this Flat", class: "btn-lb rounded-pill border-0 w-100 py-3" %>
          <% end %>
          <%= link_to "Chat with the owner", flat_chat_rooms_path(@flat), method: :post, class: "btn-db rounded-pill border-0 w-100 mt-3 py-3" %>

        <% else %>
          <button type="button" class="btn-lb rounded-pill border-0 w-100 mt-3 f14White"><%= link_to "Edit your flat", edit_flat_path(@flat)%></button>
          <button type="button" class="btn-db rounded-pill border-0 w-100 mt-3 py-3 f14White"><%= link_to 'Add amenities', new_flat_amenity_path(@flat) %></button>
        <% end  %>
        <%#----------------- %>
      </div>
    </div>
  <%# Booking end %>
</div>
<%# Wrapper amenities description form end %>




<%= simple_form_for @flat do |f| %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :description %>
  <%= f.input :price, input_html: { min: '0', step: 'any' } %>
  <%= f.input :photos, as: :file %>
  <%= f.submit "Add flat", class: "btn btn-success rounded-pill mt-4 mb-3 mr-3" %>
<% end %>

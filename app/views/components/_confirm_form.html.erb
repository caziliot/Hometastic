<div class="confirm-form-container">
  <div>
    <h1>Confirm your booking</h1>

    <br>

    <% if current_user.id == @owner.id %>
      <p> <strong>Month requested:</strong> <%= @booking.month_request %></p>
      <p> <strong>City of the booking:</strong> <%= @booking.flat.city %></p>
      <p> <strong>Service Fee:</strong> <%= @booking.service_fee %></p>
      <p> <strong>Total price to pay:</strong> <%= @booking.price_owner %></p>
    <% elsif current_user.id == @requester.id %>
      <p> <strong>Month requested:</strong> <%= @booking.month_request %></p>
      <p> <strong>City of the booking:</strong> <%= @booking.flat.city %></p>
      <p> <strong>Service Fee:</strong> <%= @booking.service_fee %></p>
      <p> <strong>Total price to pay:</strong> <%= @booking.price_requester %></p>
    <% else %>
      <% redirect_to dashboard_path %>
    <% end %>
  </div>

  <br>

  <form action= <%=pay_booking_path(booking)%> method='get'>
    <label class="string optional" for="credit_card_number">Credit Card Number</label>
    <input class="form-control string optional" type="text" name="credit_card_number" id="credit_card_number" required pattern="[\d][0-9]{15}">

    <label class="string optional" for="expiracy_date">Expiracy Date</label>
    <input class="form-control string optional" type="text" name="expiracy_date" id="expiracy_date" required pattern="^(0[1-9]|1[012])[ -\/]\d\d$">


    <label class="string optional" for="cvv">CVV</label>
    <input class="form-control string optional" type="text" name="cvv" id="cvv" required pattern="^[0-9]{3,4}$">

    <input type="submit" name="commit" value="Pay" data-disable-with="pay" class="btn-small rounded-pill border-0">
  </form>
</div>

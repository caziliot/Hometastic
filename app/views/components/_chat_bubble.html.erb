

  <div class="chat-bub
    <% if chat.id == @chat_room.id%>
      chosen
    <%end%>">
    <% if user.photo.key %>
      <%= cl_image_tag user.photo.key, class: "avatar-large"%>
    <% else %>
      <img class="avatar-large" alt="avatar-large" src="https://miro.medium.com/max/720/1*W35QUSvGpcLuxPo3SRTH4w.png">
    <% end %>
    <div class="chat-info">
      <% flat = user.flats.first %>
      <% text = "#{flat.name.split(" ")[0]} #{flat.name.split(" ")[1]}.." %>

      <p class="f14"> <%= text %> <span class="selected-color"> â€¢ <%= user.flats.first.city %></span></p>

      <p> <% last_message = chat.messages.last %>
      <% if last_message&.created_at&.to_date == Date.current %>
        <p  class="pB10"><span class="message-info selected-color">Last Message: today </span></p>
      <% else %>
        <p  class="pB10"><span class="message-info selected-color">Last Message: <%= last_message&.created_at&.strftime("%-d %b %y") if last_message %> </span></p>
      <% end %>
      </p>
      <p> <%= user.first_name %>'s flat has received <%= user.booking_as_owner.size%> total requests</p>
    </div>
  </div>

<div class="flat-form-container">
  <h2>Your Flat!</h2>

  <%= simple_form_for flat do |f| %>
    <p class="f14 font-italic">Add your own flat, make it attractive for people to want to swap it with you</p>
    <%= f.input :name, required: true %>
    <%= f.input :address, id: "flat_address", required: true %>
    <%= f.input :city, input_html: { id: "flat_city_form" }, readonly: true%>
    <%= f.input :description %>
    <%= f.input :price, input_html: { min: '0', step: 'any' } %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Submit", class: "btn-small rounded-pill border-0" %>
  <% end %>
</div>

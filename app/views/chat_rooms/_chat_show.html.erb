<div>
  <p class="f26" style="padding-left:20px;padding-top:15px;" id="flat">
  <% if chat_room.flat.user.id == current_user.id %>
    <%= chat_room.user.first_name %> • <%= chat_room.flat.name%>
  <% else %>
    <%= chat_room.flat.user.first_name %> • <%= chat_room.flat.name%>
  <% end %>
  </p>
  <div id="messages" style="" data-chat-room-id="<%= chat_room.id %>" >
    <% chat_room.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>
  <%= simple_form_for [ flat, chat_room, message ], remote: true do |f| %>
    <%= f.input :content, label: false, input_html: {class: "borderR", id: "messager"}, placeholder: "Message #{chat_room.flat.user.first_name}" %>
    <%= f.submit "Send", class: "btn-lb2 rounded-pill widthSend ml-2" %>
  <% end %>
</div>
